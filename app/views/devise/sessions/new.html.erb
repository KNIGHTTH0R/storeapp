<div class="col-md-6 col-md-offset-3">

  <div class="jumbotron">
    <div class="container">
      <b><h3 class="font-main">Login.</h3></b><hr>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'font-main' %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control font-main', placeholder: 'Enter your email' %>
        </div>
        <div class="field">
          <%= f.label :password, class: 'font-main' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control font-main', placeholder: 'Enter your password' %>
        </div>

        <center>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: 'font-main' %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-success form-control font-main" %>
            </div>
          <% end %>
          <hr>
            <%= link_to "Having Trouble?", trouble_path , class: 'font-for-links' %></center>
          <hr>
    </div>
  </div>
</div>
