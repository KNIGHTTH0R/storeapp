<div class="col-md-6 col-md-offset-3">

  <div class="jumbotron">
    <div class="container">
      <b><h3 class="font-main">Forgot your password?</h3></b><hr>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email, class: 'font-main' %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email' %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success form-control font-main" %>
          </div>
          <br/>
          <center>
            <hr>
             <%= link_to "Back to Login", new_user_session_path , class: 'font-for-links' %></center>
            <hr>
          </center>
        <% end %>
     </div>
   </div>
 </div>
