<div class="jumbotron">
  <div class="container">
    <hr><center><h3 class="font-main">Account Settings.</h3></center><hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <br />
      <div class="field">
        <%= f.label :name, class: 'font-main' %><br />
        <%= f.text_field :name, autofocus: true, placeholder: 'Enter your email', class: 'form-control font-main' %>
      </div>

      <br />
      <div class="form-group">
        <%= f.label :email, class: 'font-main' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control font-main' %>
      </div>
      <br />
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: 'font-main' %> <i class='font-main'>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control font-main' %>
        <% if @minimum_password_length %>
          <em class='font-main'><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <br />
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'font-main' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control font-main' %>
      </div>
      <br />
      <hr><center><h4 class="font-main">Save Changes.</h4></center><hr>
      <div class="form-group">
        <%= f.label :current_password, class: 'font-main' %> <i class='font-main'>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control font-main' %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'btn btn-success form-control font-main' %>
      </div>
    <% end %>

    <br /><br />
    <hr><center><h4 class="font-main">Danger Zone.</h4></center><hr>

    <center><p class="font-main">I don't feel safe here.</center>
   <%= button_to "Delete my account permenantly.", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger form-control' %></p>

    <br />
    <center>
      <%= link_to "Return Back Home.", :back , class: 'font-for-links' %>
    </center>
    <br />
  </div>
 </div>
