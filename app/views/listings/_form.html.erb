<%= form_for @listing, html: { multipart: true } do |f| %>
  <% if listing.errors.any? %>
    <div id="error_explanation"><hr>
      <h4 class="font-main"><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved </h4>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li class="font-for-links"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <hr>
  <div class="form-group">
    <%= f.label :name, class: 'font-main' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, class: 'font-main' %>
    <%= f.file_field :image, class: 'form-control font-main' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'font-main' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'font-main' %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success form-control font-main" %>
  </div>
<% end %>
